<!DOCTYPE html>
<html lang="en">

<head>
    <!--ref freecodecamp.org -->
    <title>Modules Page</title>
    <meta name="modules page" content="displays data from collegedb database.">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <style>
        table,
        th,
        td {
            border: 1px solid black;
        }
    </style>
</head>

<body>
    <h1>Modules Page</h1>

    <!-- table from collegedb -->
    <table>
        <tr>
            <th>Module ID</th>
            <th>Name</th>
            <th>Credits</th>
            <th>Update</th>
            <th>Students</th>
        </tr>

        <!-- ejs script -->
        <% modules.forEach((module)=> { %>
            <tr>
                <td>
                    <%= module.mid %>
                </td>
                <td>
                    <%= module.name %>
                </td>
                <td>
                    <%= module.credits %>
                </td>

                <td><a href="/listModules">Edit</a></td>
                <td><a href="/listModules">List</a></td>
            </tr>
            <% }) %>

    </table>

    <!-- Link Back to home -->
    <a href="/">Home</a>

</body>

</html>